    <title>Yet Another Blog App</title>


</head>
<body id="background">
    <div class="container">
        <div class ="row mt-4">
            <div class="col-md-8 offset-md-5">
            <a href="/" class="btn btn-secondary">All Articles</a>
            <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header text-center"><h1 class="mb-1"><%= article.title %></h1>
                <div class="card-subtitle text-muted mb-2"><%= article.timestamp.toLocaleDateString() %></div></div>
                <div class="card-body">
                    <%- article.sanitizedHtml %>
                </div>
            </div>
    
    
    
    
    

</div>
</body>
</html>